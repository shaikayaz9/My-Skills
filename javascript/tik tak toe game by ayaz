<script type="text/javascript">

let boxes = document.querySelectorAll(".boxx");
let rbtn = document.getElementById("reset-btn");
let box =document.querySelector("box");
let msg = document.getElementById("msg");
let turnO = true;
winPatter = [
   [0,1,2],
   [0,3,6],
   [0,4,8],
   [1,4,7],
   [2,4,6],
   [2,5,8],
   [3,4,5],
   [6,7,8],
]

let resetgame = ()=>{
	let turnO = true;
	enabledboxes();
	msg.innerText = `All the best !`;
}

boxes.forEach((box)=>{
box.addEventListener("click",()=>{
	if(turnO){
		box.innerText ="O";
		box.style.color = "red"
		turnO = false;} 

		else{
		box.innerText ="X";
		box.style.color = "blue"
		turnO = true;}
		box.disabled =true;

		checkwinner();
});

});

let disabledbox = ()=>{
	for(let box of boxes){
		box.disabled = true;
	}
}


let enabledboxes = ()=>{
	for(let box of boxes){
		box.disabled = false;
		box.innerText ="";
	}
}

let showwinner = (pos1)=>{
	msg.innerText = `Congratulation winner is ${pos1}`;
    disabledbox();
}

let checkwinner = () =>{
	for (let i of winPatter){
		let pos1 = boxes[i[0]].innerText;
		let pos2 = boxes[i[1]].innerText;
		let pos3 = boxes[i[2]].innerText;


		if(pos1 != "" && pos2 != "" && pos3 != ""){
			if(pos1 === pos2 && pos2 === pos3){
				console.log("winner",pos1);
				showwinner(pos1);

			}
		}
	}
}
rbtn.addEventListener("click", resetgame);
</script>
